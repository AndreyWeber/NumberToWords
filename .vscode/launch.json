    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": ".NET Build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/NumberToWords.exe",
            "args": [],
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}