{
    "version": "2.0.0",
    "tasks": [
        {
            "label": ".NET Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/NumberToWords.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": ".NET Clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/NumberToWords.csproj"
            ],
            "problemMatcher": []
        }
    ]
}